{
  "$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
  "extends": ["ultracite"],
  "files": {
    "includes": ["!src/components/ui/**", "!src/lib/**", "!src/hooks/**"]
  },
  "linter": {
    "rules": {
      "nursery": {
        "noUnknownAtRule": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 120,
    "indentWidth": 2,
    "indentStyle": "space",
    "lineEnding": "lf"
  }
}
